---
import { getGlobal } from '@lib/api.js';
const API_URL = 'https://cms.baukasten.matthiashacksteiner.net';

const { slug } = Astro.params;
const pagesResponse = await fetch(API_URL + '/' + slug + '.json');
if (!pagesResponse) throw Astro.redirect('/404');
const data = await pagesResponse.json();
const global = await getGlobal();
const pageTitle = global.siteTitle;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
	</head>
	<body>
		{pageTitle}
		{slug}
	</body>
</html>
